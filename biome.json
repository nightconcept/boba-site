{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": [
			"src/**/*.{js,jsx,ts,tsx}",
			"src/**/*.astro",
			"src/**/*.{md,mdx}"
		],
		"ignore": ["node_modules/**", "**/*.min.js", ".astro/**", "**/.astro/**"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "space"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
